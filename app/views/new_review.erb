<h1>Review for <%= @movie.title %></h1>

<form class="form-horizontal" method="post" action="/movies/<%= @movie.id %>/reviews/create">

  <div class="form-group">
    <div class="col-sm-10">
      <input type="number" name = "score" class="form-control" id="inputNumber3" placeholder="Please enter the score for this movie">
    </div>
  </div>
    
   <textarea name="comments" class="form-control" rows="5"></textarea>
   
   <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary center-block">Submit</button>
    </div>
  </div>
   
</form>